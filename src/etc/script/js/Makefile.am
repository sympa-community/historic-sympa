install-data-hook:
	unzip -f tinymce_3_3_7.zip;\
	if [ ! -d $(staticdir)/js/tinymce ] ; then \
		echo "Creating $(staticdir)/js/tinymce"; \
		mv tinymce  $(staticdir)/js; \
	fi;
