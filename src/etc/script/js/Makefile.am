jsdir = $(staticdir)/js

js_DATA = jqplot.barRenderer.min.js \
	jqplot.CanvasAxisTickRenderer.js \
	jqplot.CanvasTextRenderer.js \
	jqplot.categoryAxisRenderer.min.js \
	jquery.jqplot.css \
	jquery.jqplot.min.js \
	jquery.tablesorter.js \
	jquery.tablesorter.css \
	jquery.js \
	sympa.js 

