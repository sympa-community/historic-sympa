use strict;
use lib '--modulesdir--';

unless (require Crypt::CipherSaber) {
    die "Crypt::CipherSaber not installed ; cannot crypt passwords";
}

#use wwslib; # not used
#use Sympa::Constants; # used in List - Robot - Site - Conf - confdef
#require tools; # used by Conf
use List;
#use SDM; # used by conf
#use Log; # used by conf

## Load sympa config
Site->load or die 'config_error';

Site->home;

SDM::db_connect() or die "Can't connect to database";

my $dbh = SDM::db_get_handler();

print "Searching uncrypted passwords\n";

my $sth = SDM::do_query(
    q{SELECT email_user, password_user
      FROM user_table
      WHERE password_user NOT LIKE 'crypt.%'}
) or die 'Unable to execute SQL statement';

my $user;

my $count = 0;

while ($user = $sth->fetchrow_hashref('NAME_lc')) {
    next unless $user->{'password_user'};

    printf "\n%s", $user->{'email_user'};

    my $crypted_password = tools::crypt_password($user->{'password_user'});

    printf " => %s", $crypted_password;

    my $sth2 = SDM::do_prepared_query(
	q{UPDATE user_table
	  SET password_user = ?
	  WHERE email_user = ?},
	$crypted_password, $user->{'email_user'}
    ) or die "Unable to execute SQL statement";
    $sth2->finish();

    $count++;
}

$sth->finish();

## Disconnect from Database
SDM::db_disconnect if $dbh;

printf "Crypted %d passwords\n", $count;
